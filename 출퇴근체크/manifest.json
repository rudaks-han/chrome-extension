{
  "name": "스펙트라 그룹웨어",
  "version": "1.0.0",
  "description": "다우오피스 접속 프로그램",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://spectra.daouoffice.com/**"],
      "js": ["js/jquery-1.9.1.min.js", "js/contents-script.js", "js/common.js"]
    }
  ],
  "background": {
    "scripts": ["background.js", "js/jquery-1.9.1.min.js"]
  },
  "permissions" : [
    "notifications", "https://spectra.daouoffice.com/**", "background", "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
