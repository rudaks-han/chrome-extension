{
    "manifest_version" : 2,
    "short_name": "victory error logging",
    "name" : "victory error logging",
    "author": "rudaks",
    "version": "0.0.1",
    "description": "victory의 backoffice 로깅",
    "browser_action": {
        "default_icon": "images/icon-error-24-32.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "run_at": "document_start",
            "js": ["js/jquery-1.9.1.min.js", "js/content-script.js", "js/injected.js"]
        }
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "permissions" : [               
        "notifications",
		"background",
		"storage",
        "webRequest",
        "*://*/*"
    ],
    "web_accessible_resources": ["js/injected.js"],
    "background": {
      "page": "background.html"
    }
}