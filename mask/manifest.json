{
    "name" : "마스크 구입",
    "version": "1",
    "manifest_version" : 2,
    "permissions" : [
        "notifications",
		"http://*/*",
        "tabs",
        "*://smartstore.naver.com/*",
        "*://order.pay.naver.com/*",
        "*://coronamask.kr/*",
		"background"
    ],
    "web_accessible_resources" : [
        "48.png"
    ],
    "content_security_policy": "script-src 'self' https://smartstore.naver.com https://order.pay.naver.com https://coronamask.kr; object-src 'self'",
    "background": {
        "page" : "background.html"
    }
}


